{
    "manifest_version": 3,
    "name": "PostOptima AI",
    "description": "Analyze your posts with AI before publishing.",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "notifications",
        "identity"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    },
    "externally_connectable": {
        "matches": [
            "https://postoptima.com/*"
        ]
    }
}